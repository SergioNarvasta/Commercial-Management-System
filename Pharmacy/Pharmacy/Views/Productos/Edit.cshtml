            </div>
            <div class="form-group">
                <label asp-for="NombreCientifico" class="control-label"></label>
                <input asp-for="NombreCientifico" class="form-control" />
                <span asp-validation-for="NombreCientifico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Concentracion" class="control-label"></label>
                <input asp-for="Concentracion" class="form-control" />
                <span asp-validation-for="Concentracion" class="text-danger"></span>
            </div>
